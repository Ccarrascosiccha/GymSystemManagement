<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:background="@color/fondos"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fondos"
        android:padding="16dp">

        <!-- Header: ID y Tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- ID de Transacción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transacción #"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextoGeneral"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvIdTransaccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="168"
                        android:textSize="14sp"
                        style="@style/TextoGeneral" />
                </LinearLayout>

                <!-- Descripción -->
                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pago de membresía GOLD - Yape"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Badge de Tipo (Ingreso/Egreso) -->
            <TextView
                android:id="@+id/tvTipoBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingreso"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_estado_activo"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Información de la Transacción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Monto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ivIconoMonto"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_money"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/azul2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/TextoGeneral"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvMonto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S/. 129.90"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_success" />

            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="2dp"
                    app:tint="@color/azul2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha: "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/TextoGeneral"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/11/2025"
                    android:textSize="13sp"
                    style="@style/TextoGeneral" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - 10:30 PM"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Método de Pago (si aplica) -->
            <LinearLayout
                android:id="@+id/layoutMetodoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_payment"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="2dp"
                    app:tint="@color/azul2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Método: "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/TextoGeneral"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvMetodoPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yape"
                    android:textSize="13sp"
                    style="@style/TextoGeneral" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerDetalles"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Ver detalles"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:backgroundTint="@color/azul2"
                android:paddingHorizontal="16dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_visibility"
                app:iconSize="18dp"
                app:iconGravity="start"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Eliminar"
                app:backgroundTint="@color/red_error"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="18dp"
                app:iconGravity="start" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>