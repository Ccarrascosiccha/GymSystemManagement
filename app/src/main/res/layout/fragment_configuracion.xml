<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Icono de Usuario -->
    <ImageView
        android:id="@+id/ivUsuarioIcono"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:tint="@color/azul2" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivUsuarioIcono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Titulos" />

    <!-- Email del Usuario -->
    <TextView
        android:id="@+id/tvUsuarioEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario@ejemplo.com"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloConfig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextoGeneral" />

    <!-- Separador -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/plomo"
        android:alpha="0.3"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvUsuarioEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sección de Cuenta -->
    <TextView
        android:id="@+id/tvSeccionCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CUENTA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Titulos" />

    <!-- Botón Cerrar Sesión -->
    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Cerrar sesión"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        app:rippleColor="@color/ripple"
        app:layout_constraintTop_toBottomOf="@id/tvSeccionCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint = "#133260"
        android:textColor = "#FFFFFF"
        android:textSize = "15sp"

        app:cornerRadius = "16dp"
        android:elevation = "2dp" />

    <!-- Información de la App (en la parte inferior) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym System Management"
            android:textSize="12sp"
            style="@style/input" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión 1.0.0"
            android:textSize="11sp"
            android:layout_marginTop="4dp"
            android:alpha="0.7"
            style="@style/input" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>