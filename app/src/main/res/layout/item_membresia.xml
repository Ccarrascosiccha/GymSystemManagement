<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:background="@color/fondos"
    app:cardElevation="6dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fondos"
        android:padding="16dp">

        <!-- Header: Usuario y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código Membresía : "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextoGeneral"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvIdMembresia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" 168"
                        android:textSize="14sp"
                        style="@style/TextoGeneral"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextoGeneral"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvNombreUsuario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nombre del Usuario"
                        android:textSize="14sp"
                        style="@style/TextoGeneral"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNI: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextoGeneral"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvDni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:textSize="14sp"
                        style="@style/TextoGeneral" />
                </LinearLayout>

            </LinearLayout>

            <!-- Badge de Estado -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activa"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_estado_activo"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azul2"
            android:layout_marginVertical="8dp" />

        <!-- Información del Plan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Plan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/TextoGeneral"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvPlan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Plan Mensual"
                    android:textSize="14sp"
                    style="@style/TextoGeneral" />

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. 100.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul2"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Fecha Inicio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio: "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/TextoGeneral"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvFechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="13sp"
                    style="@style/TextoGeneral" />

            </LinearLayout>

            <!-- Fecha Fin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fin: "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/TextoGeneral"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvFechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31/01/2024"
                    android:textSize="13sp"
                    style="@style/TextoGeneral" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerDetalles"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Detalles"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:backgroundTint="@color/azul2"
                android:paddingHorizontal="12dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Cancelar"
                app:backgroundTint="@color/naranja1"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRenovar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Renovar"
                app:backgroundTint="@color/dialog_editar"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                app:cornerRadius="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>