<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    android:background="@color/fondos"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/fondos"
        android:gravity="center_vertical">

        <!-- Icono de transacción -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcono"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:background="@color/fondos"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivIconoTransaccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fondos"
                android:layout_gravity="center"
                android:src="@drawable/ic_members"
                app:tint="@color/azul2" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Información de la transacción -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pago de Plan Mensual"
                android:textColor="@color/azul2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvIdTransaccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID 279"
                android:textColor="@color/azul2"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 Dec 2024"
                android:textColor="@color/azul2"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Monto y tipo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 500.00"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/tvTipo"
                    android:background="@color/fondos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cr"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>