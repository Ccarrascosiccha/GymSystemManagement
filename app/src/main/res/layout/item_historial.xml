            android:textSize="16sp"
            style="@style/output"/>

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: Carlos Daniel Carrasco Siccha"
            android:fontFamily="@font/poppins_light"
            style="@style/output"/>
        <TextView
            android:id="@+id/tvCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celular: 974144528"
            android:fontFamily="@font/poppins_light"
            style="@style/output"/>
        <TextView
            android:id="@+id/tvSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo: M"
            android:fontFamily="@font/poppins_light"
            style="@style/output"/>
        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo: ccarracosiccha@gmail.com"
            android:fontFamily="@font/poppins_light"
            style="@style/output"/>
        <TextView
            android:id="@+id/tvClave"
